@model KursBasvuruCoreMvc.WebUI.Models.Candidate
@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3 class="display-6">Congratulations @Model.FullName</h3>
    <p class="lead">Your application has been<mark>accepted.</mark></p>
    <p class="lead">Many thanks for you interest.</p>
    <hr />
    <blockquote class="blockquote">
        You have enrolled to @Model.SelectedCourse course.
    </blockquote>
    <p class="text-muted">You applied at @Model.ApplyAt</p>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index" asp-controller="Course">Application</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="Course">Home Page</a>
    </div>
</div>


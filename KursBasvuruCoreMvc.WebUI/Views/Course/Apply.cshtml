@model KursBasvuruCoreMvc.WebUI.Models.Candidate

@{
    ViewData["Title"] = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="display-6">Course Application Form</div>
<br />
<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
            <option value="25">25</option>
        </select>
    </div>

    <fieldset>
        <legend>Please select a course</legend>
        <p>
            <input id="html" type="radio" asp-for="SelectedCourse" value="HTML 5" checked />
            <label>HTML 5</label>
        </p>
        <p>
            <input id="css" type="radio" asp-for="SelectedCourse" value="CSS" />
            <label>CSS</label>
        </p>
        <p>
            <input id="js" type="radio" asp-for="SelectedCourse" value="JAVASCRIPT" />
            <label>JAVASCRIPT</label>
        </p>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Asp.Net Core MVC" />
            <label>Asp.Net Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="Asp.Net Core WebAPI" />
            <label>Asp.Net Core WebAPI</label>
        </p>
        <p>
            <input id="csharp" type="radio" asp-for="SelectedCourse" value="Blazor" />
            <label>Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-success" type="submit">Apply</button>
        <a class="btn btn-primary" asp-controller="Course" asp-action=" Index">Home Page</a>
    </div>
</form>

